      <CheckBox fx:id="slimBox" layoutX="101.0" layoutY="510.0" mnemonicParsing="false" onAction="#checkEventChooseBodyType" text="Slim" textFill="WHITE" />
      <Label layoutX="395.0" layoutY="278.0" prefHeight="17.0" prefWidth="94.0" text="Choose Gender:" textFill="WHITE" />
      <CheckBox fx:id="maleBox" layoutX="395.0" layoutY="304.0" mnemonicParsing="false" onAction="#checkEventChooseGender" text="Male" textFill="WHITE" />
      <CheckBox fx:id="femaleBox" layoutX="395.0" layoutY="334.0" mnemonicParsing="false" onAction="#checkEventChooseGender" text="Female" textFill="WHITE" />
      <Button fx:id="doneButton" layoutX="707.0" layoutY="596.0" mnemonicParsing="false" onAction="#doneButton" prefHeight="25.0" prefWidth="136.0" text="Done" />
      <Label fx:id="characterLabel" layoutX="624.0" layoutY="211.0" prefHeight="83.0" prefWidth="301.0" textFill="WHITE" />
      <Label layoutX="395.0" layoutY="424.0" prefHeight="17.0" prefWidth="136.0" text="Choose Desired Class: " textFill="WHITE" />
      <CheckBox fx:id="warriorBox" layoutX="395.0" layoutY="450.0" mnemonicParsing="false" onAction="#checkEventChooseClass" onMouseEntered="#warriorDescription" prefHeight="17.0" prefWidth="94.0" text="Warrior" textFill="WHITE" />
      <CheckBox fx:id="archerBox" layoutX="395.0" layoutY="480.0" mnemonicParsing="false" onAction="#checkEventChooseClass" onMouseEntered="#archerDescription" text="Archer" textFill="WHITE" />
