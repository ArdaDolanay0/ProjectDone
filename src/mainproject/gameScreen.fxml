      <CheckBox fx:id="pounderBox" layoutX="101.0" layoutY="334.0" mnemonicParsing="false" onAction="#checkEventChoseRace" onMouseEntered="#pounderDescription" prefHeight="17.0" prefWidth="73.0" text="Pounder" textFill="WHITE" />
